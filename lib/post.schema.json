{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "time": {
      "description": "UNIX time at which the post was made",
      "minimum": 0,
      "type": "integer"
    },
    "type": {
      "type": "string",
      "enum": [
        "image",
        "video"
      ]
    },
    "likes": {
      "type": "integer",
      "minimum": 0
    },
    "comments": {
      "type": "integer",
      "minimum": 0
    },
    "text": {
      "type": "string"
    },
    "media": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "username",
    "time",
    "type",
    "like",
    "comment",
    "text",
    "media"
  ]
}
